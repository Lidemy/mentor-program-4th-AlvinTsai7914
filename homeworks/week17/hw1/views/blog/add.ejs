<!doctype html>
<html lang="en">
<head>
  <%- include('../template/head')%>
  
</head>
<body>
  <%- include('../template/navbar') %>
  <section class="banner">
    <div class="banner__wrapper">
      <h1>存放技術之地</h1>
      <div>Welcome to my blog</div>
    </div>
  </section>
  <div class="container-wrapper">
    <div class="container">
      <div class="edit-post">
        <form action="/handle_add" method="POST">
          <div class="edit-post__title">
            發表文章：
          </div>
          <div class="edit-post__input-wrapper">
            <input class="edit-post__input" placeholder="請輸入文章標題" name="title" />
          </div>
          <div class="edit-post__input-wrapper">
            <textarea rows="20" class="edit-post__content" name="content"></textarea>
          </div>
          <div class="edit-post__btn-wrapper">
            <%if (errorMessage || erroeMessage > 0) {%>
              <div style='color:red'><%= errorMessage %></div>
            <% } %>
            <%if (username) {%>
              <button class="edit-post__btn" type="submit">送出</button>
            <% }else{ %>
              <div class='ban'>您的權限無法新增文章。</div>
              <a class="btn-read-more" href="/"?>READ MORE</a>
            <% } %>
          </div>
        </form>
      </div>
    </div>
  </div>
  <%- include('../template/footer') %>
</body>
</html>